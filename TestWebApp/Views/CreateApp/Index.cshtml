@model CreateAppVM
@{
    ViewData["Title"] = "Create App";
}

<div class='grid grid-cols-12 text-xl'>
    <div class='flex flex-col col-span-10 col-start-2 md:col-span-4 md:col-start-5'>

        <span class='text-3xl font-light my-2 self-center'>
            Job Application
        </span>

        <form name='job_application'
              class='flex flex-col shadow-md rounded-lg text-left mt-4'
              method="post">

            <div class='h-2 bg-purple-400 rounded-t-md'></div>

            <label  class='font-semibold ml-4 py-2' asp-for="application.Company"></label>
            <input asp-for="application.Company"
                   placeholder='Enter company here...'
                   class='border px-3 py-1 mx-4 hover:outline-none focus:outline-none focus:ring-indigo-500 focus:ring-1 rounded-md'/>

            <label  class='font-semibold ml-4 py-2' asp-for="application.Position"></label>
            <input asp-for="application.Position"
                   placeholder='Enter positon here...'
                   class='border px-3 py-1 mx-4 hover:outline-none focus:outline-none focus:ring-indigo-500 focus:ring-1 rounded-md'/>

            <label class='font-semibold ml-4 py-2' asp-for="application.URL"></label>
            <input asp-for="application.URL"
                   placeholder='Enter url here...'
                   class='border px-3 py-1 mx-4 hover:outline-none focus:outline-none focus:ring-indigo-500 focus:ring-1 rounded-md'/>

            <label  class='font-semibold ml-4 py-2' asp-for="application.Source"></label>
            <select asp-for="application.Source" asp-items="Html.GetEnumSelectList<SourceEnum>()"
                class='max-w-[36%] border px-3 py-1 mx-4 hover:outline-none focus:outline-none focus:ring-indigo-500 focus:ring-1 rounded-md'>
            </select>

            <label asp-for="application.Status"  class='font-semibold ml-4 py-2' ></label>
            <select asp-for="application.Status" asp-items="Html.GetEnumSelectList<StatusEnum>()" 
                class='max-w-[36%] border px-3 py-1 hover:outline-none focus:outline-none focus:ring-indigo-500 focus:ring-1 rounded-md mx-4'>
            </select>

            <button type='submit' class='my-4 ml-4 self-start bg-purple-500 text-white py-2 px-6 rounded-md hover:bg-purple-600'>
                Submit
            </button>
        </form>
    </div>
</div>

