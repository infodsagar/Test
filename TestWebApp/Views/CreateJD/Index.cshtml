@model JobDesc

@{
    ViewData["Title"] = "Create JobDesc";
}

<h1>Create JD</h1>

<div class='grid grid-cols-12 text-xl'>
    <div class='flex flex-col col-span-10 col-start-2 md:col-span-4 md:col-start-5'>
        <span class='text-3xl font-light my-2 self-center'>
            Job Description
        </span>
        <form method="post" 
            name='job_description' class='flex flex-col shadow-md rounded-lg text-left mt-10'>
            <div class='h-2 bg-purple-400 rounded-t-md'></div>
            <div class='pt-2 px-5 my-2'></div>
            <textarea asp-for="JobDescription"
                rows={6} placeholder='Enter description here...' class='border px-3 py-1 mx-4 mt-2 hover:outline-none focus:outline-none focus:ring-indigo-500 focus:ring-1 rounded-md'></textarea>
            
                <button type='submit' class='my-4 ml-4 self-start bg-purple-500 text-white py-2 px-6 rounded-md hover:bg-purple-600'>
                Submit
            </button>
        </form>
    </div>
</div>