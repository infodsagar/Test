<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JobTracker</title>
    <!--  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TestWebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class='border-b-2 border-purple-400 text-lg p-2'>
            <div class='flex justify-between mx-2'>
                <ul>
                    <li>
                        <a class='p-2 cursor-pointer rounded-sm hover:bg-purple-500 hover:text-white'
                           asp-area=''
                           asp-controller='Home'
                           asp-action='Index'>
                            Home
                        </a>
                    </li>
                </ul>
                <ul class='flex flex-row mx-2'>
                    <li class=''>
                        <a class='p-2 mx-2 cursor-pointer rounded-sm hover:bg-purple-500 hover:text-white'
                           asp-area=''
                           asp-controller='Applications'
                           asp-action='Index'>
                            Applications
                        </a>
                    </li>
                    <li class=''>
                        <a class='p-2 mx-2 cursor-pointer rounded-sm hover:bg-purple-500 hover:text-white'
                           asp-area=''
                           asp-controller='CreateApp'
                           asp-action='Index'>
                            Create App
                        </a>
                    </li>
                    <li class=''>
                        <a class='p-2 mx-2 cursor-pointer rounded-sm hover:bg-purple-500 hover:text-white'
                           asp-area=''
                           asp-controller='CreateJD'
                           asp-action='Index'>
                            Create JD
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        
    </header>
    <div class="">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="">
        <div class="">
            
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!--<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>-->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
